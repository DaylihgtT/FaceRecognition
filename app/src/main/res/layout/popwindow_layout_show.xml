<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88777777"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#C1F3F2F2"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CBFAF9F9"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="拍照"
            android:layout_centerHorizontal="true"
            android:id="@+id/text_open_camera"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B2AFAFAF"
            android:layout_below="@id/text_open_camera"
            android:id="@+id/under_camera_line"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="从相册选择"
            android:layout_centerHorizontal="true"
            android:id="@+id/text_open_album"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/under_camera_line"
            />

    </RelativeLayout>


</RelativeLayout>
