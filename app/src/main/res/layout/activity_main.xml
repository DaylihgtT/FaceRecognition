<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_detect_face"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_compare_face"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="15dp"
        android:background="@drawable/analyze_face"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人脸检测"
        app:layout_constraintTop_toBottomOf="@id/img_detect_face"
        app:layout_constraintLeft_toLeftOf="@id/img_detect_face"
        app:layout_constraintRight_toRightOf="@id/img_detect_face"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#038CCA"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_compare_face"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_detect_face"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"
        android:background="@drawable/detect_face"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人脸识别"
        app:layout_constraintTop_toBottomOf="@id/img_compare_face"
        app:layout_constraintLeft_toLeftOf="@id/img_compare_face"
        app:layout_constraintRight_toRightOf="@id/img_compare_face"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#038CCA"
        />


</android.support.constraint.ConstraintLayout>